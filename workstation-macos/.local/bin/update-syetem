#!/usr/bin/env sh

softwareupdate --list
sudo softwareupdate --install --all
brew update
brew outdated --greedy
brew upgrade --greedy
brew cleanup
cargo install $(cargo install --list | egrep '^[a-z0-9_-]+ v[0-9.]+:$' | cut -f1 -d' ')
pip list --outdated
sudo pip list --outdated --format=freeze | grep -v '^\-e' | cut -d = -f 1 | xargs -n1 pip install -U
npm outdated -g
sudo npm update -g
bob use nightly
